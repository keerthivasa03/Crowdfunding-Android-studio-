<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/primary">

    <!-- Image Preview -->
    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#cccccc"
        android:layout_marginBottom="16dp"
        android:contentDescription="Preview selected image" />


    <!-- Description Input -->
    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description about the disease"
        android:layout_marginBottom="16dp" />

    <!-- Hospital Name Input -->
    <EditText
        android:id="@+id/etHospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hospital Name"
        android:layout_marginBottom="16dp" />

    <!-- Insurance CheckBox -->
    <CheckBox
        android:id="@+id/cbInsurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you have current insurance?"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

</LinearLayout>
