<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_previous"
            android:layout_alignParentStart="true"
            android:contentDescription="Back"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAYMENT"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_toEndOf="@id/back_arrow"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"/>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/upi_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="66dp"
        android:background="@drawable/rounded"
        android:padding="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPI"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="#000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="UPI logo"
                android:src="@drawable/upi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="119dp"
                android:layout_toStartOf="@+id/radioButton"
                android:layout_toEndOf="@+id/imageView"
                android:text="Pay by Any UPI app"
                android:textColor="#000000"
                android:textSize="19dp" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="19dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/gpay"
                android:contentDescription="GPay logo" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/paytm"
                android:contentDescription="KVB logo"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phonepay"
                android:contentDescription="Vyom logo"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other UPI Options"
            android:textColor="#800000"

            android:textSize="19sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/upi_container"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded"
        android:padding="26dp">



        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/card">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:text="Credit / Debit Cards"
            android:textColor="#000000"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_next"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/netbanking_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/card_container"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NetBanking"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sbi"
                android:contentDescription="SBI logo" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/hdfc"
                android:contentDescription="HDFC logo"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icici"
                android:contentDescription="ICICI logo"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/axis"
                android:contentDescription="Axis logo"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Banks"
            android:textColor="#800000"
            android:textSize="24sp"
            android:layout_marginTop="18dp"/>
    </LinearLayout>


</RelativeLayout>